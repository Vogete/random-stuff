<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoltanfraknoi.calculator.MainActivity">

    <TextView
        android:text="0.0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblResult"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="50sp"
        android:textAlignment="textStart"
        />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="103dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="308dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="206dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineH4"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.825"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineH3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineH2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.475"
        />


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineH1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"
        />

    <Button
        style="@style/operatorBtnTemplate"
        android:text="-"
        android:id="@+id/btnMinus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnPlus"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/guidelineH3"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="+"
        android:id="@+id/btnPlus"
        style="@style/operatorBtnTemplate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/guidelineH4"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        style="@style/operatorBtnTemplate"
        android:text="ร"
        android:id="@+id/btnMultiply"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnMinus"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/guidelineH2"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        style="@style/operatorBtnTemplate"
        android:text="รท"
        android:id="@+id/btnDivide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnMultiply"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guidelineH1"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="."
        android:id="@+id/btnDot"
        style="@style/numberBtnTemplate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/guidelineH4"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        style="@style/numberBtnTemplate"
        android:text="0"
        android:id="@+id/btn0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/guidelineH4"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="="
        android:id="@+id/btnEqual"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/numberBtnTemplate"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/guidelineH4"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="1"
        android:id="@+id/btn1"
        style="@style/numberBtnTemplate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnDot"
        app:layout_constraintRight_toLeftOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/guidelineH3"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="2"
        android:id="@+id/btn2"
        style="@style/numberBtnTemplate"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@id/guidelineH3"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="3"
        android:id="@+id/btn3"
        style="@style/numberBtnTemplate"
        app:layout_constraintBottom_toTopOf="@+id/btnEqual"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/guidelineH3"

        />

    <Button
        android:text="4"
        android:id="@+id/btn4"
        style="@style/numberBtnTemplate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintRight_toLeftOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/guidelineH2"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="5"
        android:id="@+id/btn5"
        style="@style/numberBtnTemplate"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@id/guidelineH2"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="6"
        android:id="@+id/btn6"
        style="@style/numberBtnTemplate"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@id/guidelineH2"
        android:layout_height="0dp"
        android:layout_width="0dp"/>


    <Button
        android:text="7"
        android:id="@+id/btn7"
        style="@style/numberBtnTemplate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintRight_toLeftOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@+id/guidelineH1"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="8"
        android:id="@+id/btn8"
        style="@style/numberBtnTemplate"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@+id/guidelineH1"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <Button
        android:text="9"
        android:id="@+id/btn9"
        style="@style/numberBtnTemplate"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/guidelineH1"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

</android.support.constraint.ConstraintLayout>
