<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="numberBtnTemplate" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:onClick">btnOnClick</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="operatorBtnTemplate" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorFunctionKeys</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">btnOnClick</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
